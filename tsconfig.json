{
    "include": ["./src/**/*"],
    "compilerOptions": {
      "allowJs": true,
      "checkJs": true,
      "target": "esnext",
      "module": "esnext",
      "lib": ["dom", "es2017"],
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmit": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "~components/*": ["src/components/*"],
        "~images/*": ["src/images/*"],
        "~styles/*": ["src/styles/*"]
      }
    }
}